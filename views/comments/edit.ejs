<% include ../partials/header %>

<div class="row new form2">
	<h1>Edit Comment</h1>
	<div class="form">
		<form action="/recipes/<%= recipe_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
		</div>
		<div class="form-group">
			<button class="btn btn-primary btn-large btn-block">Submit</button>
		</div>
		</form>
		<a href="/recipes/<%= recipe_id %>">Go Back</a>
	</div>
</div>


<% include ../partials/footer %>