<% include ../partials/header %>

<div class="row new form2">
	<h1>Write a New Comment to <%= recipe.name %></h1>
	<div class="form">
		<form action="/recipes/<%= recipe._id %>/comments" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="comment[text]" placeholder="New Comment">
		</div>
		<div class="form-group">
			<button class="btn btn-primary btn-large">Submit</button>
			<button class="btn btn-info btn-large" href="/recipes">Go Back</button>
		</div>
		</form>
	</div>
</div>


<% include ../partials/footer %>