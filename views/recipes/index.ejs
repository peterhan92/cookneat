<% include ../partials/header %>

<header class="jumbotron">
	<div class="container">
		<h1><i class="fa fa-cutlery" aria-hidden="true"></i> Welcome to Cook n Eat!</h1>
		<p>View submitted recipes from all over the world</p>
		<div class="row">
			<div class="col-md-2">
				<p>
					<a class="btn btn-success" href="/recipes/new">Add New Recipe</a>
				</p>
			</div>
			<div class="col-md-10">
				<form action="/recipes" method="GET" id="recipe-search">
		      <div class="form-group">
		        <input class="form-control" type="text" name="search" placeholder="Search Recipe">
		      </div>
		    </form>
			</div>
	  </div>
	</div>
</header>

<div class="row recipes" id="recipe-grid">
	<% recipes.forEach(function(recipe) { %>
		<div class="col-sm-6 col-md-4">
			<a href="/recipes/<%= recipe._id %>">
				<div class="thumbnail">
					<img class="preview" src="<%= recipe.image %>">
					<div class="caption">
						<p class="thumbnail-title"><%= recipe.title %></p>
						<p class="thumbnail-username"><span class="grey-text">Recipe by</span> <%= recipe.author.username %></p>
					</div>
				</div>
			</a>
		</div>
	<% })%>
</div>

<% include ../partials/footer %>