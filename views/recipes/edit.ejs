<% include ../partials/header %>
<div class="row new">
	<h1>Create a New Recipe</h1>
	<div class="form">
		<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
			<div class="col-md-5">
				<div class="form-group">
					<input class="form-control" type="text" name="recipe[image]" value="<%= recipe.image %>">
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<input class="form-control" type="text" name="recipe[prepTime]" value="<%= recipe.prepTime %>">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<input class="form-control" type="text" name="recipe[cookTime]" value="<%= recipe.cookTime %>">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<input class="form-control" type="number" name="recipe[serving]" value="<%= recipe.serving %>">
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-7">
				<div class="form-group">
					<input class="form-control" type="text" name="recipe[title]" value="<%= recipe.title %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="recipe[description]"><%= recipe.description %></textarea>
				</div>
				<div class="form-group">
					<textarea class="form-control" name="recipe[ingredient]"><%= recipe.ingredient %></textarea>
				</div>
				<div class="form-group">
					<textarea class="form-control" name="recipe[direction]"><%= recipe.direction %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-large">Submit</button>
					<button class="btn btn-info btn-large" href="/recipes">Go Back</button>
				</div>
			</div>
		</form>
	</div>
</div>

<% include ../partials/footer %>